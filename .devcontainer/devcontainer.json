{
  "name": "Rails-Devcontainer",
  
  "dockerComposeFile": [
    "docker-compose.yml"
  ],
  
  "service": "app",
  
  "workspaceFolder": "/workspaces/rails_devcontainer",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "Shopify.ruby-lsp",
        "atipugin.rails-partial",
        "aki77.rails-routes",
        "aki77.rails-db-schema",
        "Blinknlights.fuzzy-ruby-server"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}